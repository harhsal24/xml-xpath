{
  "name": "xml-xpath-extension",
  "displayName": "XML XPath Extension",
  "publisher": "your-publisher-name",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onCommand:xmlXpath.getFromCursor",
    "onCommand:xmlXpath.setParent",
    "onCommand:xmlXpath.clearParent",
    "onCommand:xmlXpath.setMode",
    "onCommand:xmlXpath.setPreferredAttributes",
    "onCommand:xmlXpath.setIgnoreIndexTags",
    "onCommand:xmlXpath.copyXPath"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      { "command": "xmlXpath.setParent", "title": "Set Parent Tag for XPath" },
      { "command": "xmlXpath.clearParent", "title": "Clear Parent Tag" },
      { "command": "xmlXpath.setMode", "title": "Set XPath Mode" },
      { "command": "xmlXpath.setPreferredAttributes", "title": "Set Preferred Attributes" },
      { "command": "xmlXpath.setIgnoreIndexTags", "title": "Set Ignore-Index Tags" },
      { "command": "xmlXpath.copyXPath", "title": "Copy XPath from Cursor" }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "xmlXpath.copyXPath",
        "when": "editorTextFocus && editorLangId == xml"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "xmlXpath.copyXPath",
          "when": "editorLangId == xml",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "vscode": "^1.1.37",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.3"
  }
}