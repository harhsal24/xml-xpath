{
  "name": "xml-xpath-extension",
  "displayName": "XML XPath Extension",
  "publisher": "HB",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onCommand:xmlXpath.copyXPath",
    "onCommand:xmlXpath.setParent",
    "onCommand:xmlXpath.clearParent",
    "onCommand:xmlXpath.setMode",
    "onCommand:xmlXpath.setPreferredAttributes",
    "onCommand:xmlXpath.setIgnoreIndexTags",
    "onCommand:xmlXpath.toggleDisableLeafIndex",
    "onCommand:xmlXpath.toggleSkipSingleIndex",
    "onCommand:xmlXpath.toggleUseXlinkLabelIndex",
    "onCommand:xmlXpath.toggleParentScopedIndexing",
    "onCommand:xmlXpath.toggleIgnoreParentSegment"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xmlXpath.copyXPath",
        "title": "XML XPath: Copy XPath from Cursor",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.setParent",
        "title": "XML XPath: Set Parent Tag",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.clearParent",
        "title": "XML XPath: Clear Parent Tag",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.setMode",
        "title": "XML XPath: Set XPath Mode",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.setPreferredAttributes",
        "title": "XML XPath: Set Preferred Attributes",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.setIgnoreIndexTags",
        "title": "XML XPath: Set Ignore-Index Tags",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.setTemplate",
        "title": "XML XPath: Set Predicate Template",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.toggleDisableLeafIndex",
        "title": "XML XPath: Toggle Disable Leaf Index",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.toggleSkipSingleIndex",
        "title": "XML XPath: Toggle Skip Single Index",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.toggleUseXlinkLabelIndex",
        "title": "XML XPath: Toggle Use XLink Label Index",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.toggleParentScopedIndexing",
        "title": "XML XPath: Toggle Parent-Scoped Indexing",
        "category": "XML XPath"
      },
      {
        "command": "xmlXpath.toggleIgnoreParentSegment",
        "title": "XML XPath: Toggle Ignore Parent Segment",
        "category": "XML XPath"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "xmlXpath.copyXPath",
        "when": "editorTextFocus && editorLangId == xml"
      }
    ],
    "menus": {
  "editor/context": [
    {
      "command": "xmlXpath.copyXPath",
      "when": "editorLangId == xml",
      "group": "xmlXpath"

    },
    {
      "command": "xmlXpath.toggleDisableLeafIndex",
      "when": "editorTextFocus",
      "group": "xmlXpath"
    },
    {
      "command": "xmlXpath.toggleSkipSingleIndex",
      "when": "editorTextFocus",
      "group": "xmlXpath"
    },
    {
      "command": "xmlXpath.toggleUseXlinkLabelIndex",
      "when": "editorTextFocus",
      "group": "xmlXpath"
    }
  ]
}
,
    "configuration": {
      "title": "XML XPath Extension",
      "properties": {
        "xmlXpath.parentTag": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Parent tag from which to generate relative XPath."
        },
        "xmlXpath.mode": {
          "type": "object",
          "default": {
            "includeIndices": true,
            "includeAttributes": true
          },
          "description": "XPath generation mode options."
        },
        "xmlXpath.preferredAttributes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [

          ],
          "description": "Preferred attributes for XPath predicates."
        },
        "xmlXpath.ignoreIndexTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Tags for which index [1] should be omitted in XPath."
        },
        "xmlXpath.predicateTemplate": {
          "type": "string",
          "default": "[@{attr1}='{attr1V}']",
          "description": "Template for predicate rendering. Tokens: {tag}, {attr1}, {attr1V}, {xllv}, {xllvI}, {idx}."
        },
        "xmlXpath.disableLeafIndex": {
          "type": "boolean",
          "default": false,
          "description": "If true, omit the [n] index on the final (leaf) segment of the XPath."
        },
        "xmlXpath.skipSingleIndex": {
          "type": "boolean",
          "default": false,
          "description": "If true, omit all [1] indexes (i.e. when an element is the only child of its tag at that level)."
        },
        "xmlXpath.useXlinkLabelIndex": {
          "type": "boolean",
          "default": false,
          "description": "When true, use the numeric suffix parsed from xlink:label as the element index instead of the simple occurrence count."
        },
        "xmlXpath.useParentScopedIndices": {
          "type": "boolean",
          "default": false,
          "description": "If true, reset child‑counters per parent; otherwise use global‑depth counters."
        },
        "xmlXpath.ignoreParentSegment": {
          "type": "boolean",
          "default": false,
          "description": "When true, omit the parentTag itself from the generated XPath, showing only the descendant path."
        }
      }
    }
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.3"
  },
  "devDependencies": {
    "vscode": "^1.1.37",
    "vscode-test": "^1.4.0"
  }
}